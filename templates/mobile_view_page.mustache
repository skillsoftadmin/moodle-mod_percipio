<div>
    <core-course-module-description description="<% percipio.intro %>" component="mod_percipio" componentId="<% cmid %>"></core-course-module-description>
 
    <ion-list>
<ion-grid>
  <ion-row>
    <ion-col>
      <div><% 0 %></div>
    </ion-col>
    <ion-col>
      <div><% 1 %></div>
    </ion-col>
    <ion-col>
      <div><% 2 %></div>
    </ion-col>
  </ion-row>
</ion-grid>
<ion-grid>
  <ion-row>
    <ion-col>
      <div><% 3 %></div>
    </ion-col>
    <ion-col>
      <div><% 4 %></div>
    </ion-col>
    <ion-col>
      <div><% 5 %></div>
    </ion-col>
  </ion-row>
</ion-grid>
<ion-grid>
  <ion-row>
    <ion-col>
      <div><% 6 %></div>
    </ion-col>
  </ion-row>
</ion-grid>
            <ion-item>
                <ion-button class="ion-margin" expand="block" color="primary" (click)="launch($event)">
                <% btntext %>
            </ion-button>
            </ion-item>
    </ion-list>
    
</div>
